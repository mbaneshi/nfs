# NSF Multi-Platform AI Automation Template
# Caddy configuration for local development with HTTPS

# Global configuration
{
    # Enable automatic HTTPS with local CA
    local_certs
    # Enable HTTP/3
    servers {
        protocol {
            experimental_http3
        }
    }
}

# Main application domain
app.edcopo.info {
    # Enable automatic HTTPS
    tls internal

    # Reverse proxy to React web app
    reverse_proxy web:3000 {
        header_up Host {host}
        header_up X-Real-IP {remote}
        header_up X-Forwarded-For {remote}
        header_up X-Forwarded-Proto {scheme}
    }

    # Enable CORS for development
    header {
        Access-Control-Allow-Origin "https://app.edcopo.info"
        Access-Control-Allow-Methods "GET, POST, PUT, DELETE, OPTIONS"
        Access-Control-Allow-Headers "Content-Type, Authorization, X-Requested-With"
        Access-Control-Allow-Credentials "true"
    }

    # Logging
    log {
        output file /var/log/caddy/app.log
        format json
    }
}

# API domain - Kong Gateway
api.edcopo.info {
    # Enable automatic HTTPS
    tls internal

    # Reverse proxy to Kong Gateway
    reverse_proxy kong:8000 {
        header_up Host {host}
        header_up X-Real-IP {remote}
        header_up X-Forwarded-For {remote}
        header_up X-Forwarded-Proto {scheme}
    }

    # Enable CORS for development
    header {
        Access-Control-Allow-Origin "https://app.edcopo.info"
        Access-Control-Allow-Methods "GET, POST, PUT, DELETE, OPTIONS"
        Access-Control-Allow-Headers "Content-Type, Authorization, X-Requested-With"
        Access-Control-Allow-Credentials "true"
    }

    # Logging
    log {
        output file /var/log/caddy/api.log
        format json
    }
}

# Database domain - Supabase
db.edcopo.info {
    # Enable automatic HTTPS
    tls internal

    # Reverse proxy to Kong Gateway (which routes to Supabase services)
    reverse_proxy kong:8000 {
        header_up Host {host}
        header_up X-Real-IP {remote}
        header_up X-Forwarded-For {remote}
        header_up X-Forwarded-Proto {scheme}
    }

    # Enable CORS for development
    header {
        Access-Control-Allow-Origin "https://app.edcopo.info"
        Access-Control-Allow-Methods "GET, POST, PUT, DELETE, OPTIONS"
        Access-Control-Allow-Headers "Content-Type, Authorization, X-Requested-With"
        Access-Control-Allow-Credentials "true"
    }

    # Logging
    log {
        output file /var/log/caddy/db.log
        format json
    }
}

