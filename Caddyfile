# Caddyfile for NSF Multi-Platform AI Automation Template
# HTTPS configuration with automatic SSL certificates

# Global configuration
{
    # Email for Let's Encrypt certificates
    email {$CADDY_EMAIL:admin@edcopo.info}
    
    # ACME CA for Let's Encrypt
    acme_ca {$CADDY_ACME_CA:https://acme-v02.api.letsencrypt.org/directory}
    
    # Log level
    log {
        level {$CADDY_LOG_LEVEL:INFO}
        format console
    }
    
    # Auto HTTPS
    auto_https off
}

# Main web application
{$WEB_SUBDOMAIN:app}.{$DOMAIN:edcopo.info} {
    # Reverse proxy to React web app
    reverse_proxy web:{$WEB_PORT:3000} {
        header_up Host {host}
        header_up X-Real-IP {remote}
        header_up X-Forwarded-For {remote}
        header_up X-Forwarded-Proto {scheme}
    }
    
    # Enable compression
    encode gzip
    
    # Security headers
    header {
        # Enable HSTS
        Strict-Transport-Security "max-age=31536000; includeSubDomains; preload"
        
        # Prevent clickjacking
        X-Frame-Options "SAMEORIGIN"
        
        # XSS Protection
        X-Content-Type-Options "nosniff"
        X-XSS-Protection "1; mode=block"
        
        # Referrer Policy
        Referrer-Policy "strict-origin-when-cross-origin"
        
        # Content Security Policy
        Content-Security-Policy "default-src 'self'; script-src 'self' 'unsafe-inline' 'unsafe-eval'; style-src 'self' 'unsafe-inline'; img-src 'self' data: https:; font-src 'self' data:; connect-src 'self' https://api.edcopo.info https://db.edcopo.info;"
    }
    
    # Logging
    log {
        output file /var/log/caddy/web.log
        format json
    }
}

# API backend
{$API_SUBDOMAIN:api}.{$DOMAIN:edcopo.info} {
    # Reverse proxy to FastAPI backend
    reverse_proxy backend:{$API_PORT:8000} {
        header_up Host {host}
        header_up X-Real-IP {remote}
        header_up X-Forwarded-For {remote}
        header_up X-Forwarded-Proto {scheme}
    }
    
    # Enable compression
    encode gzip
    
    # CORS headers
    header {
        Access-Control-Allow-Origin "https://app.edcopo.info"
        Access-Control-Allow-Methods "GET, POST, PUT, DELETE, OPTIONS"
        Access-Control-Allow-Headers "Content-Type, Authorization, X-Requested-With"
        Access-Control-Allow-Credentials "true"
    }
    
    # Handle preflight requests
    @options {
        method OPTIONS
    }
    respond @options 200
    
    # Security headers
    header {
        Strict-Transport-Security "max-age=31536000; includeSubDomains; preload"
        X-Content-Type-Options "nosniff"
        X-Frame-Options "DENY"
        X-XSS-Protection "1; mode=block"
    }
    
    # Logging
    log {
        output file /var/log/caddy/api.log
        format json
    }
}

# n8n automation platform
{$N8N_SUBDOMAIN:automation}.{$DOMAIN:edcopo.info} {
    # Reverse proxy to n8n
    reverse_proxy n8n:{$N8N_PORT:5678} {
        header_up Host {host}
        header_up X-Real-IP {remote}
        header_up X-Forwarded-For {remote}
        header_up X-Forwarded-Proto {scheme}
    }
    
    # Enable compression
    encode gzip
    
    # Security headers
    header {
        Strict-Transport-Security "max-age=31536000; includeSubDomains; preload"
        X-Content-Type-Options "nosniff"
        X-Frame-Options "SAMEORIGIN"
        X-XSS-Protection "1; mode=block"
    }
    
    # Logging
    log {
        output file /var/log/caddy/n8n.log
        format json
    }
}

# Supabase database (for development - in production, use Supabase cloud)
{$SUPABASE_SUBDOMAIN:db}.{$DOMAIN:edcopo.info} {
    # Reverse proxy to Supabase Studio
    reverse_proxy supabase:{$SUPABASE_PORT:54323} {
        header_up Host {host}
        header_up X-Real-IP {remote}
        header_up X-Forwarded-For {remote}
        header_up X-Forwarded-Proto {scheme}
    }
    
    # Enable compression
    encode gzip
    
    # Security headers
    header {
        Strict-Transport-Security "max-age=31536000; includeSubDomains; preload"
        X-Content-Type-Options "nosniff"
        X-Frame-Options "SAMEORIGIN"
        X-XSS-Protection "1; mode=block"
    }
    
    # Logging
    log {
        output file /var/log/caddy/supabase.log
        format json
    }
}

# Redirect www to non-www
www.{$DOMAIN:edcopo.info} {
    redir https://{$DOMAIN:edcopo.info}{uri} permanent
}

# Redirect HTTP to HTTPS
{$DOMAIN:edcopo.info} {
    redir https://{$WEB_SUBDOMAIN:app}.{$DOMAIN:edcopo.info}{uri} permanent
}

# Health check endpoint
health.{$DOMAIN:edcopo.info} {
    respond /health 200 {
        body "OK"
    }
    
    respond /ready 200 {
        body "Ready"
    }
}
