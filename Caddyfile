# Health check endpoint
health.edcopo.info {
    # Enable automatic HTTPS
    tls internal

    # Simple health check response
    respond /health 200 {
        body "OK"
        header Content-Type "text/plain"
    }

    # Logging
    log {
        output file /var/log/caddy/health.log
        format json
    }
}