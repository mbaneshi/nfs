# NSF Multi-Platform AI Automation Template - Environment Configuration
# Copy this file to .env and customize for your project

# =============================================================================
# Project Configuration
# =============================================================================
PROJECT_NAME=nsf
PROJECT_DESCRIPTION="Multi-Platform AI Automation Template"
PROJECT_VERSION=1.0.0
ENVIRONMENT=development

# =============================================================================
# Domain Configuration
# =============================================================================
DOMAIN=edcopo.info
WEB_SUBDOMAIN=app
API_SUBDOMAIN=api
N8N_SUBDOMAIN=automation
SUPABASE_SUBDOMAIN=db

# =============================================================================
# Port Configuration
# =============================================================================
WEB_PORT=3000
API_PORT=8000
N8N_PORT=5678
SUPABASE_PORT=54323
SUPABASE_DB_PORT=54322
CADDY_PORT=80
CADDY_HTTPS_PORT=443

# =============================================================================
# Database Configuration (Supabase)
# =============================================================================
SUPABASE_URL=https://${SUPABASE_SUBDOMAIN}.${DOMAIN}
SUPABASE_ANON_KEY=your_supabase_anon_key_here
SUPABASE_SERVICE_ROLE_KEY=your_supabase_service_role_key_here
SUPABASE_DB_HOST=localhost
SUPABASE_DB_PORT=${SUPABASE_DB_PORT}
SUPABASE_DB_NAME=postgres
SUPABASE_DB_USER=postgres
SUPABASE_DB_PASSWORD=your_db_password_here
SUPABASE_DB_URL=postgresql://${SUPABASE_DB_USER}:${SUPABASE_DB_PASSWORD}@${SUPABASE_DB_HOST}:${SUPABASE_DB_PORT}/${SUPABASE_DB_NAME}

# =============================================================================
# API Configuration
# =============================================================================
API_URL=https://${API_SUBDOMAIN}.${DOMAIN}
API_HOST=0.0.0.0
API_PORT=${API_PORT}
API_WORKERS=1
API_RELOAD=true
API_LOG_LEVEL=info

# =============================================================================
# Web Frontend Configuration
# =============================================================================
WEB_URL=https://${WEB_SUBDOMAIN}.${DOMAIN}
WEB_HOST=0.0.0.0
WEB_PORT=${WEB_PORT}
NEXT_PUBLIC_API_URL=${API_URL}
NEXT_PUBLIC_SUPABASE_URL=${SUPABASE_URL}
NEXT_PUBLIC_SUPABASE_ANON_KEY=${SUPABASE_ANON_KEY}

# =============================================================================
# Mobile Configuration
# =============================================================================
MOBILE_API_URL=${API_URL}
MOBILE_SUPABASE_URL=${SUPABASE_URL}
MOBILE_SUPABASE_ANON_KEY=${SUPABASE_ANON_KEY}

# =============================================================================
# n8n Configuration
# =============================================================================
N8N_URL=https://${N8N_SUBDOMAIN}.${DOMAIN}
N8N_HOST=0.0.0.0
N8N_PORT=${N8N_PORT}
N8N_PROTOCOL=https
N8N_BASIC_AUTH_ACTIVE=true
N8N_BASIC_AUTH_USER=admin
N8N_BASIC_AUTH_PASSWORD=your_n8n_password_here
N8N_ENCRYPTION_KEY=your_n8n_encryption_key_here
N8N_USER_MANAGEMENT_DISABLED=false
N8N_DIAGNOSTICS_ENABLED=false
N8N_VERSION_NOTIFICATIONS_ENABLED=false
N8N_TEMPLATES_ENABLED=false
N8N_ONBOARDING_FLOW_DISABLED=true
N8N_PERSONALIZATION_ENABLED=false

# =============================================================================
# AI Integration
# =============================================================================
OPENAI_API_KEY=your_openai_api_key_here
ANTHROPIC_API_KEY=your_anthropic_api_key_here
OPENAI_MODEL=gpt-4
ANTHROPIC_MODEL=claude-3-sonnet-20240229

# =============================================================================
# Security Configuration
# =============================================================================
JWT_SECRET_KEY=your_jwt_secret_key_here
JWT_ALGORITHM=HS256
JWT_ACCESS_TOKEN_EXPIRE_MINUTES=30
JWT_REFRESH_TOKEN_EXPIRE_DAYS=7
CORS_ORIGINS=https://${WEB_SUBDOMAIN}.${DOMAIN},https://${N8N_SUBDOMAIN}.${DOMAIN}
CORS_ALLOW_CREDENTIALS=true

# =============================================================================
# Caddy Configuration
# =============================================================================
CADDY_EMAIL=your_email@${DOMAIN}
CADDY_ACME_CA=https://acme-v02.api.letsencrypt.org/directory
CADDY_LOG_LEVEL=INFO

# =============================================================================
# Docker Configuration
# =============================================================================
DOCKER_COMPOSE_PROJECT_NAME=${PROJECT_NAME}
DOCKER_NETWORK_NAME=${PROJECT_NAME}_network

# =============================================================================
# Development Configuration
# =============================================================================
DEBUG=true
LOG_LEVEL=debug
HOT_RELOAD=true
AUTO_RESTART=true

# =============================================================================
# Production Configuration (override in production)
# =============================================================================
# ENVIRONMENT=production
# DEBUG=false
# LOG_LEVEL=info
# HOT_RELOAD=false
# AUTO_RESTART=false
# API_WORKERS=4
# API_RELOAD=false
